<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scribit.sjbodzo.com.scribit.EditPost">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/addmedia_iv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:src="@drawable/addmediaicon" />

        <EditText
            android:id="@+id/title_tv"
            android:layout_toRightOf="@id/addmedia_iv"
            android:text="Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/location_tv"
            android:text="Location"
            android:layout_alignLeft="@id/title_tv"
            android:layout_below="@id/title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/time_tv"
            android:layout_alignLeft="@id/location_tv"
            android:layout_below="@id/location_tv"
            android:text="Time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ischallengequery_tv"
            android:text="Is this a Challenge?"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/ischallenge_switch"
            android:layout_toRightOf="@id/ischallengequery_tv"
            android:textOn="Yes"
            android:textOff="No"
            android:layout_width="fill_parent"
            android:layout_alignBaseline="@id/ischallengequery_tv"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/whichchallenge_button"
            android:layout_marginTop="8dp"
            android:text="Select Challenge"
            android:visibility="invisible"
            android:layout_below="@id/ischallengequery_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <EditText
        android:id="@+id/inputdesc_et"
        android:minLines="7"
        android:background="#aa000000"
        android:scrollbars="vertical"
        android:shadowRadius="2"
        android:layout_marginTop="10dp"
        android:hint="Input description here..."
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_button"
        android:text="Submit"
        android:layout_marginTop="12dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
