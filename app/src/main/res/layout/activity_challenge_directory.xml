<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scribit.sjbodzo.com.scribit.ChallengeDirectory"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />

        <TextView
            android:text="ALL"
            android:clickable="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <TextView
            android:text="/"
            android:textSize="20sp"
            android:paddingLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"  />

        <TextView
            android:text="COMPLETED"
            android:clickable="true"
            android:textSize="20sp"
            android:paddingLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"  />

        </LinearLayout>

    <TextView
        android:text="Foodie"
        android:textColor="@color/aquaGreen"
        style="@style/CategoryHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/foodieList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Outdoorsy"
        android:textColor="@color/iCantBelieveItsNotPink"
        style="@style/CategoryHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/outdoorsyList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Sports &amp; Rec"
        android:textColor="@color/dubiousYellow"
        style="@style/CategoryHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/sportsAndRecList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
