<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scribit.sjbodzo.com.scribit.ChallengeTrackerAdapter">

    <TextView
        android:textSize="28sp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/chall_track_adapter_title_tv"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/chall_track_adapter_title_tv"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leftDetailLocIcon"
            android:src="@drawable/ic_locationicon"
            android:visibility="gone"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <ImageView
            android:id="@+id/leftDetailPriceTagIcon"
            android:src="@drawable/ic_pricetag"
            android:visibility="gone"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <TextView
            android:layout_weight="2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/chall_track_adapter_title_tv"
            android:id="@+id/chall_track_adapter_leftdetail_tv"
            android:text="XXXXXX"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/rightDetailLocIcon"
            android:src="@drawable/ic_locationicon"
            android:visibility="gone"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <ImageView
            android:id="@+id/rightDetailPriceTagIcon"
            android:src="@drawable/ic_pricetag"
            android:visibility="gone"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <TextView
            android:layout_weight="2"
            android:id="@+id/chall_track_adapter_underdetail_tv"
            android:text="XXXXXX"
            android:textSize="30sp"
            android:layout_below="@id/chall_track_adapter_title_tv"
            android:layout_toRightOf="@id/chall_track_adapter_leftdetail_tv"
            android:layout_alignBaseline="@id/chall_track_adapter_leftdetail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>
