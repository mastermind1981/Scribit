<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scribit.sjbodzo.com.scribit.Home">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar_iv"
            android:src="@drawable/avatar_iv"
            android:layout_height="140dip"
            android:layout_width="140dip" />

        <TextView
            android:id="@+id/username_tv"
            android:text="ZKGATA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:textSize="25sp"
            android:layout_toRightOf="@id/avatar_iv"
            android:layout_alignTop="@id/avatar_iv" />

        <TextView
            android:text="THE NIGHT OWL"
            android:textSize="19sp"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:layout_below="@id/username_tv"
            android:layout_alignLeft="@id/username_tv"
            android:id="@+id/titleName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/pencilicon_iv"
            android:id="@+id/numPosts_iv"
            android:layout_below="@id/titleName_tv"
            android:layout_alignLeft="@id/titleName_tv"
            android:layout_marginLeft="21dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/numChallenges_iv"
            android:layout_alignLeft="@id/titleName_tv"
            android:src="@drawable/trophyicon_iv"
            android:layout_marginLeft="95dp"
            android:layout_below="@id/titleName_tv"
            android:layout_width="34dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="XX"
            android:paddingLeft="30dp"
            android:paddingTop="67dp"
            android:textSize="18sp"
            android:layout_alignLeft="@id/username_tv"
            android:layout_below="@id/username_tv"
            android:id="@+id/postNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="XX"
            android:textSize="18sp"
            android:paddingLeft="55dp"
            android:layout_alignBaseline="@id/postNum_tv"
            android:layout_below="@id/username_tv"
            android:layout_toRightOf="@id/postNum_tv"
            android:id="@+id/challengeNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="#20000000" />

    <Button
        android:id="@+id/journalEnt_button"
        style="@style/NavActionButton"
        android:text="JOURNAL ENTRIES"
        android:layout_width="fill_parent"
        android:layout_height="65dip" />

    <Button
        android:id="@+id/challengeTracker_button"
        style="@style/NavActionButton"
        android:text="CHALLENGE TRACKER"
        android:layout_width="fill_parent"
        android:layout_height="65dip" />

    <Button
        android:id="@+id/challengeDirViewButton"
        style="@style/NavActionButton"
        android:text="VIEW CHALLENGES"
        android:layout_width="fill_parent"
        android:layout_height="65dip" />

    <Button
        android:id="@+id/options_button"
        style="@style/NavActionButton"
        android:text="OPTIONS"
        android:layout_width="fill_parent"
        android:layout_height="65dip" />

</LinearLayout>
